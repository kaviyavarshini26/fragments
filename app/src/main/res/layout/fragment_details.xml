<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">


    <TextView
        android:id="@+id/tv_additem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="#C30D4F"
        android:text="Add Item" />
    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"

        android:textColor="#2595B1"
        android:text="Cancel" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_additem"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="photo"
            android:textColor="#C318C0"
            app:drawableStartCompat="@drawable/ic_photos1"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
          android:textSize="24dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="#C318C0"
            app:drawableStartCompat="@drawable/ic_camera1"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:textSize="24dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="#C318C0"
            app:drawableStartCompat="@drawable/ic_notes1"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:textSize="24dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Files"
            android:textColor="#C318C0"
            app:drawableStartCompat="@drawable/ic_folder"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:textSize="24dp"
            android:layout_marginStart="16dp"/>


    </LinearLayout>

</RelativeLayout>